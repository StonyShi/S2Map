<?xml version="1.0" encoding="UTF-8"?>
<assembly >
    <id>dist</id>
    <formats>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${basedir}</directory>
            <includes>
                <include>README*</include>
                <include>LICENSE*</include>
                <include>NOTICE*</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>bin</outputDirectory>
            <directory>${basedir}/bin</directory>
            <fileMode>0744</fileMode>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>logs</outputDirectory>
            <directory>${basedir}/logs</directory>
            <fileMode>0777</fileMode>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
        <fileSet>
            <!--<directory>${project.build.directory}/classes/WEBAPP</directory>-->
            <directory>${basedir}/src/main/resources/WEBAPP</directory>
            <outputDirectory>WEBAPP</outputDirectory>
            <fileMode>0644</fileMode>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>

    </fileSets>
    <files>
        <file>
            <source>${basedir}/src/main/resources/log4j2.xml</source>
            <outputDirectory>config</outputDirectory>
            <fileMode>0644</fileMode>
        </file>

        <file>
            <source>${project.build.directory}/classes/MainServer.class</source>
            <outputDirectory>/</outputDirectory>
            <fileMode>0755</fileMode>
        </file>
        <file>
            <source>${project.build.directory}/classes/MainServer.class</source>
            <outputDirectory>/bin</outputDirectory>
            <fileMode>0755</fileMode>
        </file>
    </files>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
        </dependencySet>
    </dependencySets>
</assembly>
